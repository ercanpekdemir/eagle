<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="edit_purchase" prefHeight="700.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label layoutX="80.0" layoutY="120.0" prefHeight="30" prefWidth="110.0" text="Ürün Açıklaması" textFill="#006cb4">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <Label layoutX="80.0" layoutY="160.0" prefHeight="30" prefWidth="110.0" text="Birimi" textFill="#006cb4">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <Label layoutX="80.0" layoutY="200.0" prefHeight="30" prefWidth="110.0" text="Miktarı" textFill="#006cb4">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <TextField fx:id="purchase_expl" layoutX="200.0" layoutY="120.0" prefHeight="27.0" prefWidth="200.0" />
      <Button layoutX="256.0" layoutY="280.0" mnemonicParsing="false" onMouseClicked="#onMouseClickedKaydet" prefHeight="27.0" prefWidth="144.0" style="-fx-background-color: #006cb4;" text="Kaydet" textFill="WHITE">
         <font>
            <Font size="16.0" />
         </font>
      </Button>
      <Button layoutX="256.0" layoutY="325.0" mnemonicParsing="false" onMouseClicked="#onMouseClickedSil" prefHeight="27.0" prefWidth="144.0" style="-fx-background-color: #006cb4;" text="Satışı Sil" textFill="WHITE">
