         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <TextField fx:id="purchase_quantity" layoutX="200.0" layoutY="200.0" prefHeight="27.0" prefWidth="200.0" />
      <Label layoutX="80.0" layoutY="240.0" prefHeight="30" prefWidth="110.0" text="Birim Fiyatı" textFill="#006cb4">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <TextField fx:id="purchase_unit_price" layoutX="200.0" layoutY="240.0" prefHeight="27.0" prefWidth="200.0" />

      <Label fx:id="purchase_title" layoutX="80.0" layoutY="14.0" prefHeight="30" prefWidth="500.0" text="Satışı düzenle" textFill="#006cb4">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <ChoiceBox fx:id="purchase_unit_chose" layoutX="200.0" layoutY="162.0" prefWidth="200.0">
         <items>
            <FXCollections fx:factory="observableArrayList">
               <String fx:value="ADET" />
               <String fx:value="SAAT" />
               <String fx:value="KM" />
               <String fx:value="METREKUP" />
               <String fx:value="METREKARE" />
               <String fx:value="METRE" />
               <String fx:value="KILO" />
